@model ContactInfoListDto
@{
    ViewData["Title"] = "İletişim Bilgileri Güncelle";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<form class="col-lg-12" method="post" action="/Admin/ContactInfo/Update">
    <div class="card">
        <div class="card-header"><strong>İletişim Bilgileri Güncelleme</strong><small> </small></div>
        <div class="card-body card-block">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group"><label for="Name" class=" form-control-label">İsim</label>              <input type="text"  required value="@Model.Name" id="Name" name="Name" placeholder="Şirket İsmini Giriniz" class="form-control"></div>
            <div class="form-group"><label for="Email" class=" form-control-label">Email</label>            <input type="email" required  value="@Model.Email" id="Email" name="Email" placeholder="Epostanızı Giriniz" class="form-control"></div>
            <div class="form-group"><label for="Address" class=" form-control-label">Adres</label>          <input type="text"  required id="Address" value="@Model.Address" name="Address" placeholder="Adresinizi Giriniz" class="form-control"></div>
            <div class="form-group"><label for="Number" class=" form-control-label">Telefon Numarası</label><input type="tel"   required id="Number" name="Phone" value="@Model.Phone" placeholder="Telefon numaranızı giriniz" class="form-control"></div>
            <div class="form-group"><label for="Address" class=" form-control-label">X</label>              <input type="text"  required id="Address" value="@Model.XUrl" name="XUrl" placeholder="Adresinizi Giriniz" class="form-control"></div>
            <div class="form-group"><label for="Address" class=" form-control-label">Instagram</label>      <input type="text"  required id="Address" value="@Model.InstagramUrl" name="InstagramUrl" placeholder="Adresinizi Giriniz" class="form-control"></div>
            <div class="form-group"><label for="Address" class=" form-control-label">Linkedin</label>       <input type="text"  required id="Address" value="@Model.LinkedinUrl" name="LinkedinUrl" placeholder="Adresinizi Giriniz" class="form-control"></div>
            <div class="form-group"><label for="Address" class=" form-control-label">Facebook</label>       <input type="text"  required id="Address" value="@Model.FacebookUrl" name="FacebookUrl" placeholder="Adresinizi Giriniz" class="form-control"></div>
            <div class="form-group"><label for="Address" class=" form-control-label">Longitude</label>      <input type="text"  required id="Address" value="@Model.LocationLongitude" name="LocationLongitude" placeholder="Adresinizi Giriniz" class="form-control"></div>
            <div class="form-group"><label for="Address" class=" form-control-label">Latitude</label>       <input type="text"  required id="Address" value="@Model.LocationLatitude" name="LocationLatitude" placeholder="Adresinizi Giriniz" class="form-control"></div>



            <button type="submit" class="btn btn-outline-success ">Gönder</button>

        </div>
    </div>
</form>
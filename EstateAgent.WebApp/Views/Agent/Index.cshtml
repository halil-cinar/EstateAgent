@model GenericLoadMoreDto<AgentListDto>
@{
    ViewData["Title"] = "Agents Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- banner -->
<div class="inside-banner">
    <div class="container">
        <span class="pull-right"><a href="/">Anasayfa</a> / Çalişanlar</span>
        <h2>Çalişanlar</h2>
    </div>
</div>
<!-- banner -->


<div class="container">
    <div class="spacer agents">

        <div class="row">
            <div class="col-lg-8  col-lg-offset-2 col-sm-12">
                @if (Model?.Values?.Count > 0)
                {
                    @for (int i = 0; i < Model?.Values?.Count; i++)
                    {
                        var item = Model.Values[i];
                        <!-- agents -->
                       <div class="row">
                           <div class="col-lg-2 col-sm-2 "><a href="#"><img src="/Media/@item.MediaId" class="img-responsive" alt="agent name"></a></div>
                           <div class="col-lg-7 col-sm-7 "><h4>@item.Name</h4>
                               <p>
@item.Description
                           </p></div>
                           <div class="col-lg-3 col-sm-3 ">
                               <span class="glyphicon glyphicon-envelope"></span> <a href="mailto:@item.Email">@item.Email</a><br>
                               <span class="glyphicon glyphicon-earphone"></span> @item.PhoneNumber
                           </div>
                       </div>
                       <!-- agents -->
                    }
                }
                
                


            </div>
        </div>


    </div>
</div>



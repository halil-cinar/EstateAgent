@model AgentListDto
@{
    ViewData["Title"] = $"{Model.Name} Çalişan Güncelleme";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<form class="col-lg-12" method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header"><strong>Çalişan Güncelleme</strong><small> </small></div>
        <div class="card-body card-block">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="UserId" value="@Model.UserId" />

            <div class="form-group"><label for="Name" class=" form-control-label">İsim</label><input type="text" id="Name" name="Name" required value="@Model.Name" placeholder="İsminizi Giriniz" class="form-control"></div>
            <div class="form-group"><label for="Description" class=" form-control-label">Hakkında</label><input type="text" id="Description" required value="@Model.Description" name="Description" placeholder="Hakkınızda metni giriniz" class="form-control"></div>
            <div class="form-group"><label for="Email" class=" form-control-label">Email</label><input type="text" id="Email" name="Email" required placeholder="Epostanızı giriniz" value="@Model.Email" class="form-control"></div>
            <div class="form-group"><label for="PhoneNumber" class=" form-control-label">Telefon Numarası</label><input type="tel" id="PhoneNumber" required name="PhoneNumber" value="@Model.PhoneNumber" placeholder="Telefon Numarası" class="form-control"></div>

            <button type="submit" class="btn btn-outline-success ">Gönder</button>

        </div>
    </div>
</form>
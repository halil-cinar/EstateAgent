
@{
    ViewData["Title"] = "Çalişan Ekleme";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<form class="col-lg-12" method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header"><strong>Çalisan Ekleme</strong><small> </small></div>
        <div class="card-body card-block">
            <div class="form-group"><label for="Name" class=" form-control-label">İsim</label><input type="text" id="Name"  required name="Name" placeholder="İsmini Giriniz" class="form-control"></div>
            <div class="form-group"><label for="Description" class=" form-control-label">Açıklama</label><input type="text" required id="Description" name="Description" placeholder="Hakkında giriniz" class="form-control"></div>
            <div class="form-group"><label for="Email" class=" form-control-label">Email</label><input type="text" id="Email" required name="Email" placeholder="Eposta Giriniz" class="form-control"></div>
            <div class="form-group"><label for="PhoneNumber" class=" form-control-label">Telefon Numarası</label><input type="tel" required id="PhoneNumber" name="PhoneNumber" placeholder="Telefon numarası giriniz" class="form-control"></div>

            <div class="form-group"><label for="select" class=" form-control-label">Bir çalişan kulanıcısı seç</label>

                <select name="UserId" id="select" required class="form-control">
                    <option value="0">Lütfen Seç</option>
                    @if (ViewBag?.UserOptionList?.Count > 0)
                    {
                        @for (int i = 0; i < ViewBag?.UserOptionList?.Count; i++)
                        {
                            var item = ViewBag?.UserOptionList[i];
                            <option value="@item?.Value">@item?.Text</option>
                    }
                    }
                    
                </select>
             </div>

           

            <div class="form-group">
                <label for="file-input" class=" form-control-label">Profil resmi giriniz</label>
                <input type="file" id="file-input" required name="File" class="form-control-file">
            </div>

            <button type="submit" class="btn btn-outline-success ">Gönder</button>

        </div>
    </div>
</form>


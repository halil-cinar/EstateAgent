@model GenericLoadMoreDto<SystemSettingsListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4>Sistem Ayarları</h4>
            </div>
            <div class="card-body">

                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    @if (Model?.Values?.Count > 0)
                    {
                        foreach (var item in Model.Values)
                        {
                            <li class="nav-item ">
                                <a class="nav-link @((Model.Values.FirstOrDefault()==item)?"active show":"")" id="@(item.Key)-tab" data-toggle="pill" href="#@(item.Key)" role="tab" aria-controls="@(item.Key)" aria-selected="false">@(item.Name)</a>
                            </li>
                        }
                    }


                </ul>
                <hr />
                <div class="tab-content border p-2" id="pills-tabContent">
                    @if (Model?.Values?.Count > 0)
                    {
                        foreach (var item in Model.Values)
                        {
                            <div class="tab-pane fade @((Model.Values.FirstOrDefault()==item)?"active show":"")" id="@(item.Key)" role="tabpanel" aria-labelledby="@(item.Key)-tab">
                                <h3>@(item.Name)</h3>
                                <form method="post">
                                    <input type="hidden" name="Id" value="@item.Id" />
                                    <input type="hidden" name="Key" value="@item.Key" />
                                    <input type="hidden" name="Name" value="@item.Name" />

                                    <div class="form-group has-success">
                                        <label for="value" class="control-label mb-1">Yeni Değeri Giriniz</label>
                                        <input id="value" required name="value" type="text" class="form-control " data-val="true" value="@item.Value" data-val-required="Lütfen sistemin yeni değerini giriniz." aria-required="true" aria-invalid="false">
                                        <span class="help-block field-validation-valid" data-valmsg-for="value" data-valmsg-replace="true"></span>
                                    </div>
                                    <div class="form-actions form-group">
                                        <button type="submit" class="btn btn-success">Güncelle</button>
                                    </div>

                                </form>
                            </div>
                        }
                    }


                </div>






            </div>
        </div>
    </div>

</div>


@{
    ViewData["Title"] = "UserAdd";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}
<form class="col-lg-12" method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header"><strong>Kulanıcı Ekleme</strong><small> </small></div>
        <div class="card-body card-block">
            <div class="form-group"><label for="Name" class=" form-control-label">İsim</label>                  <input required type="text" id="Name" name="Name" placeholder="İsim giriniz" class="form-control"></div>
            <div class="form-group"><label for="Surname" class=" form-control-label">Soyisim</label>            <input required type="text" id="Surname" name="Surname" placeholder="Soyisim giriniz" class="form-control"></div>
            <div class="form-group"><label for="BirthDate" class=" form-control-label">Doğum Tarihi</label>     <input required type="date" id="BirthDate"  name="BirthDate" placeholder="Doğum Tarihi giriniz" class="form-control"></div>
            <div class="form-group"><label for="Email" class=" form-control-label">Eposta</label>               <input required type="text" id="Email" name="Email" placeholder="Eposta Giriniz" class="form-control"></div>
            <div class="form-group"><label for="PhoneNumber" class="form-control-label">Telefon Numarası</label><input required type="tel" id="PhoneNumber" name="PhoneNumber" placeholder="Telefon Numarası Giriniz" class="form-control"></div>

            <div class="form-group">
                <label for="select" class=" form-control-label">Role Seçiniz</label>

                <select name="Role" required id="select" class="form-control">
                    <option value="0">Lütfen Seçiniz</option>
                    @foreach (var item in ViewBag?.Roles)
                    {
                        <option value="@item.Value">@item.Text</option>

                    }


                </select>
            </div>

            <div class="form-group"><label for="UserName" class=" form-control-label">Kullanıcı Adı</label><input required type="text" id="UserName" name="UserName" placeholder="Enter your  username" class="form-control"></div>
            <div class="form-group"><label for="Password" class=" form-control-label">Şifre</label><input required type="text" id="Password" name="Password" placeholder="Enter your  password" class="form-control"></div>


            <div class="form-group">
                <label for="file-input" class=" form-control-label">Profil resmi giriniz</label>
                <input type="file"  id="file-input" name="ProfilePhoto" class="form-control-file">
            </div>

            <button type="submit" class="btn btn-outline-success ">Gönder</button>

        </div>
    </div>
</form>
